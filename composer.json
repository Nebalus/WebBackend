{
    "name": "nebalus/webapi",
    "description": "The web api for 'https://api.nebalus.dev'",
    
    "authors": [
        {
            "name": "Nebalus"
        }
    ],
    
    "autoload": {
        "psr-4": {
            "Nebalus\\Webapi\\": "src/"
        }
    },
    
    "require": {
        "php": "^8.3",
        "ext-pdo": "*",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.5",
        "slim/slim": "4.*",
        "slim/psr7": "^1.6",
        "guzzlehttp/guzzle": "^7.8"
    },
    
    "autoload-dev": {
        "psr-4": {
            "UnitTesting\\": "tests/"
        }
    },
    
    "require-dev": {
        "phpmd/phpmd": "^2.15",
        "squizlabs/php_codesniffer": "^3.9",
        "phpunit/phpunit": "^11.0"
    }
}
