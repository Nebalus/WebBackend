{
    "name": "nebalus/testapi",
    "description": "A Test API",
    
    "authors": [
        {
            "name": "Nebalus"
        }
    ],
    
    "autoload": {
        "psr-4": {
            "Nebalus\\Ownsite\\": "src/"
        }
    },
    
    "require": {
    	"php": "^8.2",
        "php-di/php-di": "^7.0",
        "ext-pdo": "*",
        "monolog/monolog": "^3.5",
        "slim/slim": "4.*",
        "slim/psr7": "^1.6",
        "slim/twig-view": "^3.3",
        "guzzlehttp/guzzle": "^7.8"
    },
    
    "autoload-dev": {
        "psr-4": {
            "UnitTesting\\": "tests/"
        }
    },
    
    "require-dev": {
        "phpmd/phpmd": "^2.15",
        "squizlabs/php_codesniffer": "^3.9",
        "phpunit/phpunit": "^10.5"
    }
}
