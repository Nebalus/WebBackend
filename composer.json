{
    "name": "nebalus/testapi",
    "description": "A Test API",
    "minimum-stability": "dev",
    "type": "project",
    
    "authors": [
        {
            "name": "Nebalus"
        }
    ],
    
    "autoload": {
        "psr-4": {
            "Testapi\\": "src/"
        }
    },
    
    "require": {
    	"php": "^8.3",
        "php-di/php-di": "^7.0",
        "ext-pdo": "*",
        "monolog/monolog": "^3.5",
        "slim/slim": "4.*",
        "slim/psr7": "^1.6"
    },
    
    "autoload-dev": {
        "psr-4": {
            "UnitTesting\\": "tests/"
        }
    },
    
    "require-dev": {
        "phpmd/phpmd": "^2.15",
        "squizlabs/php_codesniffer": "^3.8",
        "phpunit/phpunit": "^11.0"
    }
}
