{% extends "/email/base_layout.twig" %}

{% block subject %}Password Reset Request{% endblock %}

{% block content %}
    <p>Hello {{ username }},</p>

    <p>We received a request to reset your password. Click the link below to set a new password:</p>

    <p>
        <a href="https://api.nebalus.dev/ui/reset-password/{{ token }}" style="display: inline-block; padding: 12px 24px; background-color: #4F46E5; color: #ffffff; text-decoration: none; border-radius: 6px; font-weight: bold;">
            Reset Password
        </a>
    </p>

    <p>This link will expire in 15 minutes. If you did not request a password reset, you can safely ignore this email.</p>
{% endblock %}
