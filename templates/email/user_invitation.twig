{% extends "/email/base_layout.twig" %}

{% block subject %}
    You have been invited to {{ app_name }}
{% endblock %}

{% block content %}
    <p>Hello,</p>

    <p>
        {{ inviter_name }} has invited you to join
        <strong>{{ app_name }}</strong>.
    </p>

    {% if invitation_message is defined %}
        <p>
            <em>{{ invitation_message }}</em>
        </p>
    {% endif %}

    <p>
        To accept the invitation, click the link below:
    </p>

    <p>
        <a href="{{ invitation_link }}">
            Accept invitation
        </a>
    </p>

    <p style="font-size:12px; color:#666;">
        This invitation link is personal and may expire.
    </p>
{% endblock %}
